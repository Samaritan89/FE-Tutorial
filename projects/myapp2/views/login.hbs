<h1>{{title}}</h1>

<form method="POST" action="/login">
	<p>
		<textarea></textarea>
		<input name="hd" type="hidden" value="122" />
	</p>
	<table align="center" border="1" cellpadding="10" cellspacing="0">
		<tr>
			<th>用户名：</th>
			<td><input id="username" name="username" id="un" type="text" placeholder="请输入用户名"/></td>
		</tr>
		<tr>
			<th>密码:</th>
			<td><input id="password" name="password" type="password" placeholder="请输入密码"/></td>
		</tr>
		<tr>
			<td colspan="2">
				<input id="remPass" type="checkbox" checked=""/>
			</td>
		</tr>
		<tr>
			<td><input type="reset" value="重置"/></td>
			<td><input type="submit" value="登录"/></td>
		</tr>
	</table>

	<script src="/javascripts/jquery-2.1.3.min.js"></script>
	<script src="/javascripts/jquery.cookie.js"></script>

	<script type="text/javascript">
		$(function(){
			if($.cookie('username')){
				$('#username').val($.cookie('username'));
				$('#password').val($.cookie('password'));
			}
		});

		$('form').on('submit', function(e){
			if($('#remPass').val()){
				$.cookie('username', $('#username').val(), { expires: 7 });
				$.cookie('password', $('#password').val(), { expires: 7 });
			}
		});
	</script>
</form>
